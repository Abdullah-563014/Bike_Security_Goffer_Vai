<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/colorDarkOrange"
                android:endColor="@color/colorWhite"
                android:angle="225"
                android:type="linear"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>
    <item
        android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/colorDarkOrange"
                android:centerColor="@color/colorGray"
                android:endColor="@color/colorGreen"
                android:angle="225"
                android:type="linear"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>
</selector>